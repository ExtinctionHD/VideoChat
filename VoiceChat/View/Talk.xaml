<UserControl x:Class="VoiceChat.View.Talk"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VoiceChat.View"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0, 25">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="0.6*"/>
        </Grid.RowDefinitions>

        <!--<Image gif:ImageBehavior.AnimatedSource="Images/AnimationCyan.gif"
               gif:ImageBehavior.RepeatBehavior="Forever"
               Grid.Row="0"
               Height="60"
               HorizontalAlignment="Center"
               Margin="0, 20, 0, 0"
               RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="105"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>-->

        <Grid HorizontalAlignment="Center"
              VerticalAlignment="Center"
               Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Talk with"
                       HorizontalAlignment="Center"
                       FontSize="16"
                       Margin="0, 5"/>

            <TextBox Text="{Binding Path=RemoteIP}"
                     IsReadOnly="True"
                     Grid.Row="1"
                     FontSize="28"
                     Width="auto"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"
                     HorizontalContentAlignment="Center"/>
        </Grid>

        <Button HorizontalAlignment="Center"
                Content="END CALL"
                FontSize="16"
                Grid.Row="2"
                Command="{Binding Path=EndCall}"/>
    </Grid>
</UserControl>

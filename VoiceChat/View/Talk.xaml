<UserControl x:Class="VoiceChat.View.Talk"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VoiceChat.View"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.25*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid Margin="50, 8"
              Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding Path=RemoteIP}"
                       Margin="0"
                       VerticalAlignment="Bottom"
                       FontWeight="Medium"
                       FontSize="24"/>

            <TextBlock Text="Calling"
                       Grid.Column="1"
                       Margin="5, 0, 0, 1"
                       VerticalAlignment="Bottom"
                       FontSize="20"/>

            <TextBlock Text="{Binding Path=CallTime}"
                       Grid.Column="2"
                       Margin="0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom"
                       FontSize="24"/>

        </Grid>


        <Rectangle Fill="{DynamicResource PrimaryHueLightBrush}"
                   Grid.Row="1"
                   Grid.ColumnSpan="2"
                   Opacity="0.5"/>

        <Grid Grid.Row="1"
              Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="8*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Rectangle Fill="#FF673AB7"
                       Grid.Row="1" 
                       Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"/>
            <Image Source="Images/Avatar.png"
                   Grid.Row="1"
                   Margin="50, 0"/>
        </Grid>
        
        <Image Source="{Binding Path=RemoteFrame}"
               Margin="50, 0"
               Grid.Row="1"
               Grid.ColumnSpan="2"
               Stretch="UniformToFill"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>

        <Grid Grid.Column="1"
              Grid.RowSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0.35*"/>
            </Grid.RowDefinitions>

            <Image Source="{Binding Path=LocalFrame}"
                   Margin="0, 25, 10, 10"
                   Grid.Row="1"
                   Stretch="UniformToFill"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="2"
              Margin="50, 12"
              HorizontalAlignment="Center"
              Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Style="{DynamicResource MaterialDesignFloatingActionButton}"
                    Grid.Column="0"
                    Height="{Binding Width, RelativeSource={RelativeSource Self}}"
                    Width="45"
                    Margin="20, 0"
                    Command="{Binding Path=VideoSharing}">
                <Image Source="{Binding Path=CameraButton}"
                       Margin="9"/>
            </Button>

            <Button Style="{DynamicResource MaterialDesignFloatingActionButton}"
                    Grid.Column="1"
                    Height="{Binding Width, RelativeSource={RelativeSource Self}}"
                    Width="45"
                    Margin="20, 0"
                    Command="{Binding Path=AudioSharing}">
                <Image Source="{Binding Path=MicrophoneButton}"
                       Margin="9"/>
            </Button>

            <Button Style="{DynamicResource MaterialDesignFloatingActionButton}"
                    Grid.Column="2"
                    Height="{Binding Width, RelativeSource={RelativeSource Self}}"
                    Width="45"
                    Margin="20, 0"
                    Command="">
                <Image Source="Images/Buttons/Message.png"
                       Margin="10"/>
            </Button>

            <Button Style="{DynamicResource MaterialDesignFloatingActionLightButton}"
                    Grid.Column="3"
                    Background="Red"
                    BorderBrush="Red"
                    Height="{Binding Width, RelativeSource={RelativeSource Self}}"
                    Width="45"
                    Margin="20, 0"
                    Command="{Binding Path=EndCall}">
                <Image Source="Images/Buttons/Decline.png"
                       Margin="7"/>
            </Button>

        </Grid>

        <!--<Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="0.8*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image Grid.RowSpan="2"
               Grid.ColumnSpan="3"
               Margin="20"
               Source="{Binding Path=RemoteFrame}"/>

        <Grid HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Grid.Row="2"
              Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Call time"
                       HorizontalAlignment="Center"
                       FontSize="16"
                       Margin="0, 5"/>

            <TextBox Text="{Binding Path=CallTime, Mode=OneWay}"
                     IsReadOnly="True"
                     Grid.Row="1"
                     FontSize="28"
                     Width="auto"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"
                     HorizontalContentAlignment="Center"/>
        </Grid>

        <Button HorizontalAlignment="Center"
                Content="END CALL"
                FontSize="16"
                Grid.Row="2"
                Grid.Column="1"
                Command="{Binding Path=EndCall}"/>

        <Grid HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Grid.Row="2"
              Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Talking with"
                       HorizontalAlignment="Center"
                       FontSize="16"
                       Margin="0, 5"/>

            <TextBox Text="{Binding Path=RemoteIP}"
                     IsReadOnly="True"
                     Grid.Row="1"
                     FontSize="28"
                     Width="auto"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"
                     HorizontalContentAlignment="Center"/>
        </Grid>-->
    </Grid>
</UserControl>
